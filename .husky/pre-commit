set -e

# Go to root directory of the repository
cd "$(git rev-parse --show-toplevel)"

# Run frontend lint-staged
echo -e "🛠️\u0020Running frontend pre-commit hooks..."
cd ./frontend
npx lint-staged

# Run backend pre-commit
echo -e "🛠️\u0020Running backend pre-commit hooks..."
cd ../backend
uv run pre-commit run --config .pre-commit-config.yaml
