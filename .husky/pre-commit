set -e

# Go to root directory of the repository
cd "$(git rev-parse --show-toplevel)"

# Run frontend lint-staged
echo "ğŸ› ï¸- Running linting and formatting checks..."
cd ./frontend
npx lint-staged

# Run backend pre-commit linting
cd ../backend
uv run pre-commit run --config .pre-commit-config.yaml --hook-stage pre-commit

echo "âœ…- Linting and formatting checks passed"


if git diff --cached --name-only | grep -qE "(models\.py|models/|alembic/versions/)"; then
    echo "ğŸ—ƒï¸- Checking database migrations and models..."

    echo "ğŸ”Œ- Testing DB connection..."
    if ! docker compose run  -T backend uv run alembic current >/dev/null 2>&1; then
        echo "âš ï¸  Cannot connect to database. Attempting to start it with Docker..."

        if docker compose up -d db; then
            echo "â³ Waiting for DB container to be healthy..."

            for i in {1..10}; do
                STATUS=$(docker inspect --format='{{.State.Health.Status}}' jspracticalcourse-db-1 2>/dev/null || echo "unknown")
                if [ "$STATUS" = "healthy" ]; then
                    echo "âœ… DB container is healthy after $i second(s)"
                    break
                elif [ "$i" -eq 10 ]; then
                    echo "âŒ DB container did not become healthy in time"
                    exit 1
                fi
                echo "â³ Waiting... ($i/10)"
                sleep 1
            done
        else
            echo "âŒ- Failed to start the database container with Docker Compose."
            exit 1
        fi
    else
        echo "âœ… alembic current succeeded"
    fi

    echo "ğŸ“ˆ- Upgrading to latest migration..."
    if ! docker compose run --rm -T backend uv run alembic upgrade head >/dev/null 2>&1; then
        echo "âŒ- Failed to upgrade to latest migration. One of your migration(s) has a broken upgrade() function."
        exit 1
    fi
    echo "âœ… alembic upgrade succeeded"

    echo "ğŸ§ª- Verifying model/schema consistency..."
    if ! docker compose run --rm -T backend uv run alembic check; then
        echo "âŒ- Models don't match database after running latest migrations. This means either:"
        echo "   - You changed models but didn't create a migration script. Run 'uv run alembic revision --autogenerate -m \"<message>\"' to create a new migration script."
        echo "   - Your latest migration script doesn't actually reflect your current models. Make sure the latest migration script has the correct changes in the upgrade() function."
        exit 1
    fi

    echo "âœ… Checks for database migrations and models passed"
else
    echo "â„¹ï¸- No model or migration changes detected, skipping database checks."
fi

exit 0
